<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DescripcionPelicula"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgPeliculaDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bonesheader"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tituloPeliculaDescripcion"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:text="texto"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/yellow"/>

    </LinearLayout>

    <TextView
        android:id="@+id/descripcionPelicula"
        android:text="texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray"/>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barrierDirection="top" />

    <Button
        android:id="@+id/btnComprar"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="@string/comprar"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingHorizontal="25dp"
        android:background="@color/yellow"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asientosRestantes"
        android:text="texto"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginTop="7dp"
        android:textColor="@color/cardview_light_background"
        />
</LinearLayout>